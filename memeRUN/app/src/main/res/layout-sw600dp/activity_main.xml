<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="730dp"
            android:layout_height="120dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView_start">

                <Button
                    android:id="@+id/start_btn"
                    android:layout_width="700dp"
                    android:layout_height="70dp"
                    android:background="@color/colorAccent"
                    android:shadowColor="@android:color/background_dark"
                    android:text="@string/Start"
                    android:textSize="30sp"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_start"
            android:layout_width="730dp"
            android:layout_height="120dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="36dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <Button
                    android:id="@+id/Recent_activity_btn"
                    android:layout_width="700dp"
                    android:layout_height="70dp"
                    android:background="@color/colorAccent"
                    android:shadowColor="@android:color/background_dark"
                    android:text="@string/RecentActivity"
                    android:textSize="30sp"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="730dp"
            android:layout_height="120dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

                <Button
                    android:id="@+id/Achievements_btn"
                    android:layout_width="700dp"
                    android:layout_height="70dp"
                    android:background="@color/colorAccent"
                    android:shadowColor="@android:color/background_dark"
                    android:text="@string/Achievements"
                    android:textSize="30sp"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="730dp"
            android:layout_height="120dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="38dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/View_collection_btn"
                    android:layout_width="700dp"
                    android:layout_height="70dp"
                    android:background="@color/colorAccent"
                    android:shadowColor="@android:color/background_dark"
                    android:text="@string/ViewCollection"
                    android:textSize="30sp"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/trollface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@mipmap/trollface_foregnd" />

</android.support.constraint.ConstraintLayout>