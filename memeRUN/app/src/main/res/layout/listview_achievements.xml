<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/requirement_text"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="42dp"
        android:text="@string/Requirement"
        app:layout_constraintEnd_toStartOf="@+id/requirement_in_m_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memename_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:text="@string/MemeUnlocked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Achievements_image"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memename_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/sad_rage" />

    <TextView
        android:id="@+id/requirement_in_m_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:text="x_metres"
        app:layout_constraintStart_toEndOf="@+id/requirement_text"
        app:layout_constraintTop_toBottomOf="@+id/memename_text" />

    q
</android.support.constraint.ConstraintLayout>