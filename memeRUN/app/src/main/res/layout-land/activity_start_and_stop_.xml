<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none|horizontal|vertical"
    tools:context=".startAndStop_Activity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView_cancel"
        android:layout_width="140dp"
        android:layout_height="81dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView3">

        <Button
            android:id="@+id/startandstop_cancel"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:shadowColor="@android:color/background_dark"
            android:text="@string/cancel"
            android:verticalScrollbarPosition="left"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView3"
        android:layout_width="269dp"
        android:layout_height="195dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@raw/walk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next_txt"
        android:layout_width="wrap_content"
        android:layout_height="17dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/NextAchievement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/next_achievevement_txt"
        android:layout_width="wrap_content"
        android:layout_height="17dp"

        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/next_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_back"
        android:layout_width="140dp"
        android:layout_height="81dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView_start">

        <Button
            android:id="@+id/startandstop_back"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:shadowColor="@android:color/background_dark"
            android:text="@string/BackButton"
            android:verticalScrollbarPosition="left"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_start"
        android:layout_width="140dp"
        android:layout_height="81dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="44dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toStartOf="@+id/cardView_cancel"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView3">

        <Button
            android:id="@+id/startandstop_start"
            android:layout_width="108dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:shadowColor="@android:color/background_dark"
            android:text="@string/Start"
            android:verticalScrollbarPosition="left"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/steps___"
        app:layout_constraintTop_toBottomOf="@+id/next_achievevement_txt" />

    <TextView
        android:id="@+id/steps___"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="108dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Steps:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_txt"
        tools:text="Steps:" />

    <TextView
        android:id="@+id/feels_like_you"
        android:layout_width="119dp"
        android:layout_height="51dp"

        android:layout_marginStart="169dp"
        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif-medium"
        android:text="This feels like you:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_text" />

</android.support.constraint.ConstraintLayout>